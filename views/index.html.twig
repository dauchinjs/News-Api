<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>News Report</title>
</head>
<header> {{ keyword }}</header>
<body>
<div class="search_space">
    <form action="/" method="get" class="search_box">
        <label>
            <input type="text" name="search" id="search" placeholder="Enter keyword" required>
        </label>
        <button class="btn"><i class="fa fa-search"></i></button>
    </form>
</div>
<div>
    <h1 class="search_text">Search results for "{{ keyword }}"</h1>
    {% for article in articles %}
        <h2>{{ article.getTitle }}</h2>
        <h3>{{ article.getDescription }}</h3>
        <div style="text-align: center">
            <img class="picture" src="{{ article.getPicture }}" alt="{{ keyword }}">
        </div>

        <a href="{{ article.getUrl }}" target="_blank">Source</a>
        <hr>
    {% endfor %}
</div>
</body>
</html>

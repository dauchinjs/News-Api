{% include 'layout.twig' %}
<link rel="stylesheet"
      href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">

<section class="pt-5 bg-rgb(120, 120, 120)">
    <div class="w-full lg:w-4/12 px-4 mx-auto">
        <div class="relative flex flex-col min-w-0 break-words bg-gray-200 w-full mb-6 shadow-xl rounded-lg mt-16">
            <div class="px-6">
                <div class="text-center mt-12">
                    <h3 class="text-5xl font-semibold leading-normal mb-2 text-red-900 mb-2">
                        My Profile
                    </h3>
                    <br>
                    <div class="text-m leading-normal mt-0 mb-2 text-red-800 font-bold uppercase">
                        Name: {{ auth.name }}
                    </div>
                    <div class="text-m leading-normal mt-0 mb-2 text-red-800 font-bold uppercase">
                        Email: {{ auth.email }}
                    </div>
                    <br><br>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="pt-16 bg-rgb(120, 120, 120)">
    <form class="mt-8 space-y-6" action="/profile" method="post">
        <div class="w-full lg:w-4/12 px-4 mx-auto">
            <div class="relative flex flex-col min-w-0 break-words bg-gray-200 w-full mb-6 shadow-xl rounded-lg mt-16">
                <div class="px-6">
                    <div class="text-center mt-12">
                        <h3 class="text-5xl font-semibold leading-normal mb-2 text-red-900 mb-2">
                            Edit my Profile
                        </h3>
                        <br>
                        <div>
                            <label for="name" class="font-semibold text-gray-700 block pb-1">Name</label>
                            <input id="name" name="name" type="text" class="border-1  rounded-r px-4 py-2 w-full"
                                   placeholder="Name">
                        </div>
                        <div>
                            <label for="email" class="font-semibold text-gray-700 block pb-1">Email</label>
                            <input id="email" name="email" type="email" class="border-1  rounded-r px-4 py-2 w-full"
                                   placeholder="Email Address">
                        </div>
                        {% if error.email %}
                            <div style="color: maroon;">{{ error.email }}</div>
                        {% endif %}
                        <br><br>
                        <div>
                            <button type="submit"
                                    class="group relative flex w-full justify-center rounded-md border border-transparent
                             bg-red-800 py-2 px-4 text-sm font-medium text-white hover:bg-red-900 focus:outline-none
                              focus:ring-2 focus:ring-red-800 focus:ring-offset-2">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-red-500 group-hover:text-red-700" xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd"
                    d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2
                     2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z"
                    clip-rule="evenodd"/>
            </svg>
          </span>
                                Update Profile
                            </button>
                        </div>
                        <br><br>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
<section class="pt-16 bg-rgb(120, 120, 120)">
    <form class="mt-8 space-y-6" action="/profile" method="post">
        <div class="w-full lg:w-4/12 px-4 mx-auto">
            <div class="relative flex flex-col min-w-0 break-words bg-gray-200 w-full mb-6 shadow-xl rounded-lg mt-16">
                <div class="px-6">
                    <div class="text-center mt-12">
                        <h3 class="text-5xl font-semibold leading-normal mb-2 text-red-900 mb-2">
                            Change Password
                        </h3>
                        <br>
                        <div>
                            <label for="password" class="font-semibold text-gray-700 block pb-1">Password</label>
                            <input id="password" name="password" type="password"
                                   class="border-1  rounded-r px-4 py-2 w-full" placeholder="Password">
                        </div>
                        <div>
                            <label for="password_repeat" class="font-semibold text-gray-700 block pb-1">Confirm
                                Password</label>
                            <input id="password_repeat" name="password_repeat" type="password"
                                   class="border-1  rounded-r px-4 py-2 w-full" placeholder="Confirm Password">
                            {% if error.password %}
                                <div style="color: maroon;">{{ error.password }}</div>
                            {% endif %}
                        </div>
                        <br><br>
                        <div>
                            <button type="submit"
                                    class="group relative flex w-full justify-center rounded-md border border-transparent
                             bg-red-800 py-2 px-4 text-sm font-medium text-white hover:bg-red-900 focus:outline-none
                              focus:ring-2 focus:ring-red-800 focus:ring-offset-2">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-red-500 group-hover:text-red-700" xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd"
                    d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2
                     2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z"
                    clip-rule="evenodd"/>
            </svg>
          </span>
                                Change Password
                            </button>
                        </div>
                        <br><br>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
